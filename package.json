{
	"name": "ddb-lib",
	"version": "0.1.0",
	"description": "Lightweight TypeScript wrapper for AWS DynamoDB with schema validation and best practices",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rsbuild build && tsc --emitDeclarationOnly",
		"test": "rstest",
		"test:watch": "rstest --watch",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"keywords": [
		"dynamodb",
		"aws",
		"typescript",
		"schema",
		"validation"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@aws-sdk/client-dynamodb": "^3.709.0",
		"@aws-sdk/lib-dynamodb": "^3.709.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@rsbuild/core": "^1.6.7",
		"@rstest/core": "^0.6.8",
		"@types/node": "^22.10.2",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
