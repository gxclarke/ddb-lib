{
	"name": "ddb-lib-monorepo",
	"version": "0.1.0",
	"description": "Lightweight TypeScript wrapper for AWS DynamoDB with schema validation and best practices",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "npm run build:packages",
		"build:packages": "npm run build -w @ddb-lib/core && npm run build -w @ddb-lib/stats && npm run build -w @ddb-lib/client && npm run build -w @ddb-lib/amplify",
		"build:core": "npm run build -w @ddb-lib/core",
		"build:stats": "npm run build -w @ddb-lib/stats",
		"build:client": "npm run build -w @ddb-lib/client",
		"build:amplify": "npm run build -w @ddb-lib/amplify",
		"clean": "npm run clean --workspaces --if-present",
		"test": "npm run test --workspaces --if-present",
		"test:all": "rstest run",
		"test:unit": "rstest run",
		"test:integration": "rstest run --config rstest.integration.config.ts",
		"test:watch": "npm run test:watch --workspaces --if-present",
		"test:core": "npm run test -w @ddb-lib/core",
		"test:stats": "npm run test -w @ddb-lib/stats",
		"test:client": "npm run test -w @ddb-lib/client",
		"test:amplify": "npm run test -w @ddb-lib/amplify",
		"test:coverage": "rstest run --coverage",
		"typecheck": "npm run typecheck --workspaces --if-present",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"keywords": [
		"dynamodb",
		"aws",
		"typescript",
		"schema",
		"validation"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@rsbuild/core": "^1.6.7",
		"@rstest/core": "^0.6.8",
		"@types/node": "^22.10.2",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
